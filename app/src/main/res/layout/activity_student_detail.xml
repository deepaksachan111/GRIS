<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lko.my.gris.Student.StudentDetailActivity">


    <LinearLayout
        android:id="@+id/linear_actionbar"
        android:background="#20272F"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <ImageView
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@mipmap/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:text="Student Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:background="#fff"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button

            android:id="@+id/branch_studetail"
            android:textColor="#fff"
            android:layout_margin="2dp"
            android:background="#C70039"
            android:layout_weight="1"
            android:text="Branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/student_id_studetail"
            android:textColor="#fff"
            android:layout_margin="2dp"
            android:background="#C70039"
            android:layout_weight="1"
            android:text="Student ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView

        android:id="@+id/student_name_studetail"
       android:typeface="serif"
        android:textColor="@android:color/holo_blue_light"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


    <LinearLayout

        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/relative_student_postrequest"
        android:layout_weight="1"
        android:background="@drawable/circleimg"
        android:layout_width="80dp"
        android:layout_height="150dp">

       <TextView
           android:textSize="24dp"
           android:textColor="#FFF"
           android:textStyle="bold"
           android:layout_centerInParent="true"
           android:gravity="center"
           android:text="Post Request"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />



    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/stu_viewstatus_realtive"
            android:layout_weight="1"
            android:background="@drawable/circleimg"
            android:layout_width="80dp"
            android:layout_height="150dp">

            <TextView
                android:textSize="24dp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="View Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative_downloadattachment"
            android:layout_weight="1"
            android:background="@drawable/circleimg"
            android:layout_width="80dp"
            android:layout_height="150dp">

            <TextView
                android:textSize="24dp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Download Attachment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/student_ext"
            android:layout_weight="1"
            android:background="@drawable/circleimg"
            android:layout_width="80dp"
            android:layout_height="150dp">

            <TextView
                android:textSize="24dp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



        </RelativeLayout>

    </LinearLayout>



    </LinearLayout>


    </ScrollView>

</LinearLayout>
