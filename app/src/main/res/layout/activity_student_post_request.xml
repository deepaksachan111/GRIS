<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
   android:background="#48423F"
    tools:context="com.lko.my.gris.Student.StudentPostRequestActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:elevation="5dp"
        android:padding="30dp"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@android:color/holo_red_dark"
             android:text="Department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/edt_student_post_department"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_layout_bg"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_marginTop="50dp"
            android:textColor="@android:color/holo_red_dark"
            android:text="Enter Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



       <EditText

            android:id="@+id/edt_student_edittext"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_layout_bg"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="fill_parent"
            android:layout_height="150dp" />


        <Button
            android:id="@+id/btn_post_request_save"
            android:layout_marginTop="50dp"
            android:text="post"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
    </ScrollView>
</RelativeLayout>
