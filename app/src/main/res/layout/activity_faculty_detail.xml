<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lko.my.gris.Faculty.FacultyDetailActivity">
    <LinearLayout
        android:id="@+id/linear_actionbar"
        android:background="#20272F"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <ImageView
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@mipmap/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:text="Faculty Detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/one"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

       <RelativeLayout
           android:id="@+id/relative_view_reports"
           android:layout_weight="1"
           android:background="@drawable/circleimg"
           android:layout_width="0dp"
           android:layout_height="150dp">

           <TextView
               android:textSize="24dp"
               android:textColor="#FFF"
               android:textStyle="bold"
               android:layout_centerInParent="true"
               android:gravity="center"
               android:text="View Reports"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

       </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_addassignment"
            android:layout_weight="1"
            android:background="@drawable/circleimg"
            android:layout_width="0dp"
            android:layout_height="150dp">

            <TextView

                android:textSize="24dp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Add     Assignment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
android:layout_below="@+id/one"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/realative_faculityexit"
            android:layout_weight="1"
            android:background="@drawable/circleimg"
            android:layout_width="80dp"
            android:layout_height="150dp">

            <TextView
                android:textSize="24dp"
                android:textColor="#FFF"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"

            android:layout_width="80dp"
            android:layout_height="150dp">



        </RelativeLayout>


    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
