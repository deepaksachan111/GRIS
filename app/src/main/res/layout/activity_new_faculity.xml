<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lko.my.gris.Faculty.NewFaculityActivity">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/linear_actionbar"
        android:background="#20272F"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="50dp">

        <ImageView
            android:padding="10dp"
            android:layout_gravity="center"
            android:src="@mipmap/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:text="Add New Faculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



            <LinearLayout

                android:padding="10dp"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:background="#fff"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="FacultyID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_facultyid"
                    android:imeOptions="actionGo"
                    android:singleLine="true"
                    android:ems="10"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_layout_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="Email"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_facultyemail"
                    android:imeOptions="actionGo"
                    android:singleLine="true"
                    android:ems="10"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_layout_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="Password"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:password="true"
                    android:id="@+id/edt_facultypassword"
                    android:imeOptions="actionGo"
                    android:singleLine="true"
                    android:ems="10"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_layout_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="Name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_facultyname"
                    android:imeOptions="actionGo"
                    android:singleLine="true"
                    android:ems="10"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_layout_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="Department"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_faculty_department"
                    android:imeOptions="actionGo"
                    android:singleLine="true"
                    android:ems="10"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_layout_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="MobileNo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/edt_facultymobileno"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:ems="10"
                    android:layout_marginBottom="20dp"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_layout_bg"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_margin="2dp"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:textColor="#FFF"
                        android:background="#20272F"
                        android:text="Save"
                        android:id="@+id/btn_save_newfaculity"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
