<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lko.my.gris" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Splashscreen"
            android:label="@string/app_name"
            android:theme="@style/AppTheme3333333333333333" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Student.StudentLoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme3333333333333333" >
        </activity>
        <activity
            android:name=".Faculty.FacultyLoginActivity"
            android:label="@string/title_activity_faculty_login"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" >
        </activity>
        <activity
            android:name=".Student.NewStudentActivity"
            android:label="@string/title_activity_new_student">
        </activity>
        <activity
            android:name=".Faculty.NewFaculityActivity"
            android:label="@string/title_activity_new_faculity">
        </activity>
        <activity
            android:name=".Student.StudentDetailActivity"
            android:label="@string/title_activity_student_detail" >
        </activity>
        <activity
            android:name=".Student.StudentPostRequestActivity"
            android:label="@string/title_activity_student_post_request" >
        </activity>
        <activity
            android:name=".Faculty.FacultyDetailActivity"
            android:label="@string/title_activity_faculty_detail" >
        </activity>
        <activity
            android:name=".Faculty.FacultyViewRequestActivity"
            android:label="@string/title_activity_faculty_view_request" >
        </activity>
        <activity
            android:name=".Faculty.SendActionActivity"
            android:label="@string/title_activity_send_action" >
        </activity>
        <activity
            android:name=".Student.ViewStatusActivity"
            android:label="@string/title_activity_view_status" >
        </activity>
        <activity
            android:name=".Faculty.AddAssignmentActivity"
            android:label="@string/title_activity_add_assignment" >
        </activity>
        <activity
            android:name=".Student.DownloadStudentAttachment"
            android:label="@string/title_activity_download_student_attachment" >
        </activity>
    </application>

</manifest>
